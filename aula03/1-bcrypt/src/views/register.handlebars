<h2>Registro</h2>

{{#if error}}
<p style="color: red;">{{error}}</p>
{{/if}}

<form method="POST" action="/api/sessions/register">
  <input name="first_name" placeholder="Nome" required><br>
  <input name="last_name" placeholder="Sobrenome" required><br>
  <input type="email" name="email" placeholder="Email" required><br>
  <input type="number" name="age" placeholder="Idade" required><br>
  <input type="password" name="password" placeholder="Senha" required><br>
  <button type="submit">Registrar</button>
</form>
